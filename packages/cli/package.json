{
  "name": "@sigstore/cli",
  "version": "0.8.2",
  "description": "Sigstore CLI",
  "author": "Brian DeHamer @bdehamer",
  "license": "Apache-2.0",
  "keywords": [
    "cli",
    "sigstore"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sigstore": "./bin/run"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsc -b",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "npm run build && oclif manifest && npm run readme",
    "test": "jest",
    "readme": "oclif readme --no-aliases && shx sed -i \"s/^_See code:.*$//g\" README.md"
  },
  "dependencies": {
    "@oclif/color": "^1.0.13",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@sigstore/bundle": "^3.0.0",
    "@sigstore/oci": "^0.5.0",
    "@sigstore/sign": "^3.0.0",
    "open": "^8.4.2",
    "openid-client": "^6.6.1",
    "sigstore": "^3.0.0"
  },
  "devDependencies": {
    "make-fetch-happen": "^14.0.3",
    "oclif": "^4",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sigstore/sigstore-js.git"
  },
  "homepage": "https://github.com/sigstore/sigstore-js/tree/main/packages/cli#readme",
  "bugs": "https://github.com/sigstore/sigstore-js/issues",
  "oclif": {
    "bin": "sigstore",
    "dirname": "sigstore",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " "
  },
  "engines": {
    "node": "^18.17.0 || >=20.5.0"
  }
}
