{
  "name": "@sigstore/cli",
  "version": "0.4.0",
  "description": "Sigstore CLI",
  "author": "Brian DeHamer @bdehamer",
  "license": "Apache-2.0",
  "keywords": [
    "cli",
    "sigstore"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sigstore": "./bin/run"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsc -b",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "npm run build && oclif manifest && npm run readme",
    "test": "jest",
    "readme": "oclif readme --no-aliases && shx sed -i \"s/^_See code:.*$//g\" README.md"
  },
  "dependencies": {
    "@oclif/color": "^1.0.13",
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^6",
    "open": "^8.4.2",
    "openid-client": "^5.6.1",
    "sigstore": "^2.1.0"
  },
  "devDependencies": {
    "make-fetch-happen": "^13.0.0",
    "oclif": "^4",
    "tslib": "^2.6.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sigstore/sigstore-js.git"
  },
  "homepage": "https://github.com/sigstore/sigstore-js/tree/main/packages/cli#readme",
  "bugs": "https://github.com/sigstore/sigstore-js/issues",
  "oclif": {
    "bin": "sigstore",
    "dirname": "sigstore",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " "
  },
  "engines": {
    "node": "^16.14.0 || >=18.0.0"
  }
}
